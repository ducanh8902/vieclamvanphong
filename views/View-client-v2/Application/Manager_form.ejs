    border: 2px solid gray;   
    border-radius:15px;     
    height: 80vh;       
    width: 100%;;background-color:#fff" src="assets/imgs/theme/favicon.svg"></iframe>`)
        });
        $('a[href="#btn_form_job_manager"]').click(function(){
                $("#body").html(`<iframe style="display: block;      
    background: #000;
    border: 2px solid gray;   
    border-radius:15px;     
    height: 80vh;       
    width: 100%;;background-color:#fff" src="/Recruit_Manager"></iframe>`)
        });
        function getID_Job(Job_id){
            $("#job_list").hide()
            $("#job_single").show()
            $("#job_single").html(`<iframe <iframe style="display: block;      
    background: #000;
    border: 2px solid gray;   
    border-radius:15px;     
    height: 80vh;       
    width: 100%;;background-color:#fff" src="/detail_single_job_idjob=${Job_id}"></iframe>`)
            $("#back").show()
        }
        function detail_back_manager(){
            $("#job_single").html("")
            $("#job_single").hide()
            $("#job_list").show()
            $("#back").hide()
        }
    </script>
