                                                    <div class="col-lg-9 col-sm-8 col-12">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-sm-12 col-12">
                                                                <h6 class="card-job-top--info-heading">Thông Tin</h6>
                                                                <a href="job-grid"
                                                                    class="btn btn-small background-urgent btn-pink mr-5">
                                                                    <%=item_job.head.Rank%>
